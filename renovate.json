{
  "extends": [
    "config:base",
    ":semanticCommitScopeDisabled",
    ":rebaseStalePrs",
    "group:allNonMajor"
  ],
  "ignorePresets": [":prHourlyLimit2"],
  "timezone": "America/Chicago",
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    }
  ],
  "schedule": [
    "* * 1 * *"
  ],
  "rollbackPrs": true,
  "labels": ["dependency"]
}
